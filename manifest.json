{
  "manifest_version": 3,
  "name": "TextCraft AI",
  "version": "1.0.0",
  "description": "Transform your text with AI-powered rephrasing in multiple modes and tones. Simplify, improve, detail, or shorten your writing.",
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://localhost:*/"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "32": "public/icons/icon32.png",
      "192": "public/icons/icon192.png",
      "512": "public/icons/icon512.png"
    }
  },
  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "192": "public/icons/icon192.png",
    "512": "public/icons/icon512.png"
  }
}
